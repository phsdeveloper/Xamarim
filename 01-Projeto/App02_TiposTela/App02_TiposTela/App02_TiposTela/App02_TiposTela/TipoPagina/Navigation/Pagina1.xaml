<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02_TiposTela.TipoPagina.Navigation.Pagina1"
            Title="Pagina 1"
     
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="" Icon="find.png" x:Name="tbi_Pesquisar" />
        <ToolbarItem Text="" Icon="add.png" x:Name="tbi_Adicionar"/>
        <ToolbarItem Text="" Icon="sort_ascending.png"  x:Name="tbi_Ordenar" Clicked="Tbi_Ordenar_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Aula 39: Navigation Page - ToolbarItem : Introdução"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Voltar para o inicio" x:Name="btn_Voltar" Clicked="Btn_Voltar_Clicked"/>
            <Button Text="Ir para a pagina 2" x:Name="btn_mudar" Clicked="btn_mudar_click"/>
            <Button Text="Chmar modal" x:Name="btn_chamarModal" Clicked="btn_chamarModal_click"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>